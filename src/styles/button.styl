// Example Variables
dim2 = rgba(0,0,0,0.2)
dim5 = rgba(0,0,0,0.5)
dim8 = rgba(0,0,0,0.8)

button
  font-family 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif
  font-weight bolder
  background lightblue
  // Example Using a variables
  border 1px solid dim2
  color dim5

  font-size 1.8em
  padding 1.6em 3.6em
  margin .6em
  cursor pointer

  // Selector Example
  &:hover
    border-color dim8
    color dim8
